<div class="container ">
     <h3  class="text-right ">Devis n° {{ estimate.reference }}</h3>
    <p class="mt-5 ml-5">
        {# absolute url obligatoire pour generer un pdf #}
        <img onclick="window.print()" src="{{ absolute_url(asset('img/bb-logo.jpg')) }}" alt="logo"> <br>
        {{ company.name }} <br>
        {{ company.address }} <br>
        {{ company.postCode }} {{ company.city }} <br>
        Email : {{ company.email }} <br>
        Tel : {{ company.phone }} <br>
        SIRET : {{ company.siret }} <br>
        {{ company.rcs }} <br>
    </p>

    <p class="mr-5 mb-5 mt-5" style="margin-left: 650px;">
        {{ customer.firstname }} {{ customer.lastname }} <br>
        {{ customer.address }} <br>
        {{ customer.postCode }} {{ customer.city }}
    </p>

    <p class=" ml-5  mt-5"> {{ company.city }}, le {{ estimate.createdAt | date('d-m-Y') }}</p>

    <div class="container">
        <table class="table table-striped ">
            <thead class="bg-light">
            <tr>
                <th class="text-center" scope="col">Prestations</th>
                <th class="text-center" scope="col">PU (€)</th>
                <th class="text-center" scope="col">Quantité</th>
               {# <th class="text-center" scope="col">TVA (%)</th>#}
               {# <th class="text-center" scope="col">Total HT (€)</th>#}
                <th class="text-center" scope="col">Total TTC (€)</th>
            </tr>
            </thead>
            <tbody class="bg-light">
            {% for description in estimate.descriptions %}
                <tr>
                    <td class=" text-justify">{{ description.prestation | nl2br }}</td>
                    <td class="text-center">{{ description.unitPrice | number_format(2, '.', ',') }}€</td>
                    <td class="text-center">{{ description.quantity }}</td>
                  {#  <td class="text-center">{{ description.tva }}%</td>#}
                 {#   <td class="text-center">{{ description.totalHt | number_format(2, '.', ',') }}€</td>#}
                    <td class="text-center">{{ description.totalTtc | number_format(2, '.', ',') }}€</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>
        <div class="container" style="">
            <div style="width:30%" class="float-right">
               {# <p class="text-center"> Total HT :
                    <span>{{ estimate.totalHt | number_format(2, '.', ',') }}€</span>
                </p> #}
                <p class="text-center"> Total TTC :
                    <span class="text-left">{{ estimate.totalTtc | number_format(2, '.', ',') }}€</span>
                </p>
                <hr class="border-secondary">
            </div>

            <p style="font-size: 12px;">
                {{ company.mention1 }} <br>
                {{ company.mention2 }} <br>
                {{ company.mention3 }} <br>
                {{ company.mention4 }} <br>
                {{ company.mention5 }} <br>
            </p>
        </div>

        <div class="container" style=" margin-top:100px;  margin-bottom: 150px">
            <div class="row text-center">
                <div class="col-md-6">
                    Signature Client <br>
                    <small>(Bon pour accord)</small>
                </div>
                <div class="col-md-6">
                    Signature de l'entreprise
                </div>
                <div class="col-md-10 text-right">
                    <img src="{{ asset('img/tampon.png') }}" alt="tampon" class="img-fluid" style="width: 20%;">
                </div>
            </div>
        </div>
        <div class="card text-center fixed-bottom p-3 bg-light" style="font-size: 12px; " >

        </div>
    </div>
</div>