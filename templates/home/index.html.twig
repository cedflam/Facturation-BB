{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}

    <!-- Masthead-->
    <header class="masthead">
        <div class="container h-100">

            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <img src="{{ asset('img/bb.jpg') }}" alt="logo" class="img-fluid mb-3" style="width: 20%">
                    <h1 class="text-uppercase text-white font-weight-bold">Espace de gestion </h1>
                    <hr class="divider my-4"/>
                </div>
                {% if app.user %}
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">
                        Cette page constitue le point de départ à la gestion de la clientèle. <br>
                        Depuis cette interface, vous avez la possibilité de gérer vos clients, devis et factures.
                    </p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger mb-2" href="{{ path('admin') }}">Espace
                        d'administration</a>
                </div>
                {% else %}
                    <div class="col-lg-8 align-self-baseline">
                        <p class="text-white-75 font-weight-light mb-5">
                            Cette page constitue le point de départ à la gestion de la clientèle. <br>
                            Depuis cette interface, vous avez la possibilité de gérer vos clients, devis et factures.
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </header>
{% endblock %}


