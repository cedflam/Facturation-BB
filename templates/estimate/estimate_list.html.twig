{% extends 'base.html.twig' %}

{% block title %} Mes devis {% endblock %}

{% block body %}

    <div class="container-fluid estimate pl-5 pr-5"
         style=" background-image: url({{ asset('img/bg-masthead.jpg') }}); ">


        <div class="container" style="padding-bottom: 300px;">
            <h2 class="text-white mt-5">Mes devis</h2>
              <div class="row">
            {% for estimate in estimates %}
                    <div class="col-md-4">
                        <div class="card mt-2">
                            <div class="card-header" style="font-size: 12px">
                                <h5>{{ estimate.customer.firstname }} {{ estimate.customer.lastname }}</h5>
                                Tel : {{ estimate.customer.phone }} <br>
                                <a href="mailto:{{ estimate.customer.email }}">Envoyer un email</a> <br>
                                <strong>Référence Devis :</strong> {{ estimate.reference }} <br>
                                <strong>Référence Facture :</strong> {{ estimate.invoice.reference }}
                            </div>
                            <div class="card-body" style="font-size: 14px">
                                <strong>Date :</strong> {{ estimate.createdAt | date('d/m/Y') }} <br>
                                <strong>Montant HT :</strong> {{ estimate.totalHt | number_format(2, '.', ',') }} € <br>
                                <strong>Montant TTC :</strong> {{ estimate.totalTtc | number_format(2, '.', ',') }} €
                                <br>
                                <strong> Restant Dû
                                    :</strong> {{ estimate.invoice.remainingCapital | number_format(2, '.', ',') }} €
                                <br>

                            </div>
                            <div class="card-footer">
                                <a href="{{ path('estimate_show', {'id': estimate.id }) }}"
                                   class="btn btn-sm text-white " data-toggle="tooltip" data-placement="top"
                                   title="Voir le devis" style="background: #f4623a">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('estimate_generate_pdf', {'id': estimate.id}) }}"
                                   class="btn btn-sm text-white" data-toggle="tooltip" data-placement="top"
                                   title="Générer le devis au format PDF" style="background: #f4623a">
                                    <i class="fas fa-file-pdf"></i>
                                </a>
                                <a href="{{ path('invoice_select', {'id': estimate.invoice.id }) }}"
                                   class="btn btn-sm text-white " data-toggle="tooltip" data-placement="top"
                                   title="Facturer ce client " style="background: #f4623a">
                                    <i class="fas fa-file-invoice"></i>
                                </a>
                                <a href="{{ path('estimate_edit', {'id': estimate.id }) }}"
                                   class="btn btn-sm text-white " data-toggle="tooltip" data-placement="top"
                                   title="Modifer ce devis" style="background: #f4623a">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a href="{{ path('estimate_remove', {'id': estimate.id }) }}"
                                   class="btn btn-sm text-white " data-toggle="tooltip" data-placement="top"
                                   title="Supprimer ce devis" style="background: #f4623a">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a class="btn btn-sm  text-white" data-toggle="tooltip" data-placement="top"
                                   title="Nouveau devis" href="{{ path('estimate_new') }}" style="background: #f4623a">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>

            {% endfor %}
              </div>
        </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}